# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=bookmycourt
DB_USER=your_database_username
DB_PASSWORD=your_database_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Twilio SMS Service (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Dialog SMS Service (Optional - for Sri Lanka)
DIALOG_API_KEY=your_dialog_api_key
DIALOG_API_SECRET=your_dialog_api_secret
DIALOG_PHONE_NUMBER=your_dialog_phone_number

# PayHere Payment Gateway
PAYHERE_MERCHANT_ID=your_payhere_merchant_id
PAYHERE_MERCHANT_SECRET=your_payhere_merchant_secret
PAYHERE_RETURN_URL=http://localhost:5173/payment-success
PAYHERE_CANCEL_URL=http://localhost:5173/payment-cancelled
